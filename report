def fmtRatio(frac):
  if frac is None:
    return "--"
  try:
    return makeBold(frac)
  except:
    return "--"

mplTable = "figures/all-mpl.tex"
with open(mplTable, 'w') as output:
  for tag in orderedTags:

    row = \
      [ fmt(arrayTime('mpl-cc', tag, 1))
      , fmt(delayTime('mpl-cc', tag, 1))
      , fmtRatio(arrayVsDelayTime('mpl-cc', tag, 1))
      , fmt(arrayTime('mpl-cc', tag, maxp))
      , fmt(delayTime('mpl-cc', tag, maxp))
      , fmtRatio(arrayVsDelayTime('mpl-cc', tag, maxp))
      , sfmt(arraySpace('mpl-cc-space', tag, 1))
      , sfmt(delaySpace('mpl-cc-space', tag, 1))
      , fmtRatio(arrayVsDelaySpace('mpl-cc-space', tag, 1))
      , sfmt(arraySpace('mpl-cc-space', tag, maxp))
      , sfmt(delaySpace('mpl-cc-space', tag, maxp))
      , fmtRatio(arrayVsDelaySpace('mpl-cc-space', tag, maxp))
      ]

    row = [x if x is not None else "--" for x in row]
    output.write(" & ".join([tag] + row))
    output.write("  \\\\\n")
print("[INFO] wrote to {}".format(mplTable))

cppTable = "figures/all-cpp.tex"
