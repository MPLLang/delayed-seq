      , fmt(delayTime('cpp', tag, maxp))
      , fmtRatio(arrayVsDelayTime('cpp', tag, maxp))
      , sfmt(arraySpace('cpp-space', tag, 1))
      , sfmt(delaySpace('cpp-space', tag, 1))
