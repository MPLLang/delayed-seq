    tag,
    arrayVsDelaySpace('mpl-cc-space', tag, 1),
    arrayVsDelaySpace('mpl-cc-space', tag, maxp),
    arrayVsDelaySpace('cpp-space', tag, 1),
    arrayVsDelaySpace('cpp-space', tag, maxp)
  ]
  row = [x if x is not None else "--" for x in row]
  tt.append(row)

print("ARRAY versus DELAY: space improvement factors")
print(table(tt, defaultAlign))
print("")

