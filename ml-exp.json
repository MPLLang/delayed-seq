{
  "templates":
    [
      {
        "match": { "config": "mpl" },
        "template": "/usr/bin/time -v bin/<bench>.<impl>.<config>.bin @mpl <procs?procs {}> set-affinity affinity-base 1 -- <args?{} ><args1?{}>"
      },
      {
        "match": { "config": "mlton" },
        "template": "/usr/bin/time -v bin/<bench>.<impl>.<config>.bin <args?{} ><args1?{}>"
      }
    ],

  "globals":
    {
      "procs": ["1", "10", "20", "30", "40", "50", "60", "70"],
      "config": ["mpl-cc"],
      "cwd": ["ml"],
      "args1": ["-repeat 10 -warmup 5"]
    },

  "specs":
    [
      {
        "tag": ["mcss"],
        "bench": ["mcss"],
        "impl": ["opt", "array", "delay"],
        "args": ["-n 100000000"]
      },
      {
        "tag": ["primes"],
        "bench": ["primes"],
        "impl": ["opt", "array", "delay"],
        "args": ["-n 100000000"]
      },
      {
        "tag": ["bignum-add"],
        "bench": ["bignum-add"],
        "impl": ["opt", "array", "delay"],
        "args": ["-n 100000000"]
      },
      {
        "tag": ["parens"],
        "bench": ["parens"],
        "impl": ["array", "delay"],
        "args": ["-n 100000000"]
      },
      {
        "tag": ["linefit"],
        "bench": ["linefit"],
        "impl": ["array", "delay"],
        "args": ["-n 100000000"]
      }
    ]
}
